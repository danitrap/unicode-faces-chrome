{
  "manifest_version": 2,

  "name": "Unicode Faces",
  "description": "This extension allows you to copy cool unicode faces.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon-transparent.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
